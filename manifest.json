{
  "manifest_version": 3,
  "name": "WHMCS PowerTools",
  "version": "1.3.2",
  "description": "Eempower Your WHMCS Experience",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/whmadmin/*", "*://*/admin/*", "*://*/whmcs/*", "*://*/admincp/*", "*://*/panel/*", "*://*/control/*", "*://*/secure-admin/*", "*://*/adminarea/*", "*://*/manager/*"],
      "js": ["whmcs-search-modal.js"],
      "css": ["whmcs-search-modal.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "WHMCS PowerTools"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "commands": {
    "toggle-whmcs-search": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Toggle WHMCS Search Modal"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/Vazirmatn-Regular.ttf", "assets/Vazirmatn-Bold.ttf"],
      "matches": ["<all_urls>"]
    }
  ]
}